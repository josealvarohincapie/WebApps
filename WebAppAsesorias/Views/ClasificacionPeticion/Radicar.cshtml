@model WebAppAsesorias.Models.ClasificacionPeticionModel

@{
    ViewData["Title"] = "Radicar Clasificación de la Petición";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Radicar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TextoAyuda" class="control-label"></label>
                <input asp-for="TextoAyuda" class="form-control" />
                <span asp-validation-for="TextoAyuda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoPeticion" class="control-label"></label>
                <input asp-for="IdTipoPeticion" class="form-control" />
                <span asp-validation-for="IdTipoPeticion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescTipoPeticion" class="control-label"></label>
                <input asp-for="DescTipoPeticion" class="form-control" />
                <span asp-validation-for="DescTipoPeticion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdAreaDerecho" class="control-label"></label>
                <input asp-for="IdAreaDerecho" class="form-control" />
                <span asp-validation-for="IdAreaDerecho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescAreaDerecho" class="control-label"></label>
                <input asp-for="DescAreaDerecho" class="form-control" />
                <span asp-validation-for="DescAreaDerecho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDerecho" class="control-label"></label>
                <input asp-for="IdDerecho" class="form-control" />
                <span asp-validation-for="IdDerecho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescDerecho" class="control-label"></label>
                <input asp-for="DescDerecho" class="form-control" />
                <span asp-validation-for="DescDerecho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionAsesorias" class="control-label"></label>
                <input asp-for="DescripcionAsesorias" class="form-control" />
                <span asp-validation-for="DescripcionAsesorias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observaciones" class="control-label"></label>
                <input asp-for="Observaciones" class="form-control" />
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RespuestaAsesoria" /> @Html.DisplayNameFor(model => model.RespuestaAsesoria)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="ConclusionAsesoria" class="control-label"></label>
                <input asp-for="ConclusionAsesoria" class="form-control" />
                <span asp-validation-for="ConclusionAsesoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

